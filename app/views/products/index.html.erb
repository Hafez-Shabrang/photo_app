<div class="row">

    <h1 class="text-center my-3">List of products</h1>
    <% @products.each do |p| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <%= image_tag(p.picture.url) %>
        <div class="card-body">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-text"><%= p.description %></p>
          <p class="card-text"><%= p.price %></p>
          <%= link_to "View", product_path(p), class: "btn btn-success my-2" %>
          <%= button_to "Buy now!", checkout_create_path, params: {id: p.id}, remote: true, class: "btn btn-primary" %>
          <%= link_to "Delete", product_path(p), method: :delete, class: "btn btn-danger my-2" %>
          <%= link_to "Edit", edit_product_path(p), class: "btn btn-primary my-2" %>
        </div>
      </div>
    </div>
    <% end %>

</div>