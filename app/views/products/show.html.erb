<div class="row">
  <div class="col-md-3">
      <div class="card" style="width: 18rem;">
<!--                <img src="..." class="card-img-top" alt="...">-->
        <%= image_tag(@product.picture.url) %>
        <div class="card-body">
          <h5 class="card-title"><%= @product.name %></h5>
          <p class="card-text"><%= @product.description %></p>
          <p class="card-text"><%= @product.price %></p>
          <%= button_to "Buy now!", checkout_create_path, method: :post, params: {id: @product.id}, remote: true, class: "btn btn-primary" %>
          <%= link_to "Delete", product_path(@product), method: :delete, class: "btn btn-danger my-2" %>
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary my-2" %>
        </div>
      </div>
  </div>
</div>