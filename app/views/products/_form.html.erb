<%= form_with(model: @product) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", id: "exampleFormControlInput1" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, class: "form-control", id: "exampleFormControlInput1" %>
  </div>
  <div class="mb-3">
    <%= f.label :price, class: "form-label" %>
    <%= f.number_field :price, class: "form-control", id: "exampleFormControlInput1" %>
  </div>
  <div class="mb-3">
    <%= f.label :picture, class: "form-label" %>
    <%= f.file_field :picture, class: "form-control", id: "exampleFormControlInput1" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>